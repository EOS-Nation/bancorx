{
    "compilerOptions": {
        /* Basic Options */
        "target": "es2017",
        "module": "commonjs",
        "declaration": true,
        "sourceMap": true,
        "lib": ["es6", "esnext.asynciterable"],

        /* Strict Type-Checking Options */
        "strict": true,
        "strictNullChecks": true,

        /* Module Resolution Options */
        "esModuleInterop": true,
        "outDir": "build"
    },
    "include": ["index.ts"]
}